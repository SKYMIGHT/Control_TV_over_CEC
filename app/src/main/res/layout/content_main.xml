<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Version"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Vendor Id"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Physical Address"
        android:id="@+id/button3"
        android:layout_below="@+id/button5"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is Connected"
        android:id="@+id/button5"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/button3" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton2"
        android:layout_gravity="left|center_vertical"
        android:layout_above="@+id/button10"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HDMI1 On"
        android:id="@+id/button4"
        android:layout_gravity="right|center_vertical"
        android:layout_below="@+id/button11"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button11" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:layout_gravity="right|center_vertical"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HDMI1 Off"
        android:id="@+id/button7"
        android:layout_gravity="right|center_vertical"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HDMI2 ON"
        android:id="@+id/button8"
        android:layout_gravity="right|center_vertical"
        android:layout_below="@+id/button12"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/button12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HDMI2 Off"
        android:id="@+id/button9"
        android:layout_gravity="right|center_vertical"
        android:layout_below="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:layout_alignEnd="@+id/button8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SW1 to SRC1"
        android:id="@+id/button6"
        android:layout_below="@+id/toggleButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/toggleButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SW2 to SRC1"
        android:id="@+id/button10"
        android:layout_below="@+id/toggleButton"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/toggleButton2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SW1 to SRC2"
        android:id="@+id/button11"
        android:layout_below="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SW2 to  SRC2"
        android:id="@+id/button12"
        android:layout_below="@+id/button10"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/button10" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:scrollIndicators="left"
        android:layout_below="@+id/button7"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
